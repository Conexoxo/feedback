<div class="container mt-3">
	<h1 class="center" style="color:white !important; margin-top: 2rem;">Alumnos inscritos en mis cursos</h1>
	<h6 class="center" style="color:white !important;">Total: <%= @users_count %></h6>

	<table class="table table-dark">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nombre</th>
				<th scope="col">Apellido</th>
				<th scope="col">Correo Electr√≥nico</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<th scope="row"><%= user.id %></th>
					<td><%= user.name %></td>
					<td><%= user.last_name %></td>
					<td><%= user.email %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>